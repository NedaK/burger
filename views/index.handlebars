
<div class="container">
    <div class="jumbotron" align = "center">
        <h1 class="display-4">EAT-DA-BURGER!</h1>
        
        
            <form class="create-form">

                <div class="form-group">
                    <label for="ca" ><h3>Enter a Burger you want to eat:</h3></label>
                    <input type="text" class="form-control" id="ca" name="name">
                </div>

                

                <button type="submit"class="btn btn-warning">Add Burger</button>
            </form>
    
    </div>
    
    <div class = "row">
        <div class = "col-6">
            <div class="card">
                <div class="card-body" align = "center">
        
                <h2>Burgers that are not devoured!</h2>
                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                        {{/unless}}
                    {{/each}}
                </ul>
                </div>
            </div>
        </div>

        <div class = "col-6">
            <div class="card">
                <div class="card-body" align = "center">
        
                <h2>Burgers that are devoured!</h2>
                

                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                            <li>{{burger_name}}</li>
                            {{!-- {{> burgers/burger-block devoured=false}} --}}
                            {{/if}}
                        {{/each}}
                    </ul>
                    
                </div>
            </div>
        </div>
</div>  







</div>
